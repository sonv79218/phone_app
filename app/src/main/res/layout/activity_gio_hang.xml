<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tieude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#072349"
        android:padding="16dp"
        android:gravity="center"
        android:text="GIỎ HÀNG"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Nút back -->
    <ImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ql" />

    <!-- Danh sách sản phẩm -->
    <ListView
        android:id="@+id/productGroupList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tieude"
        android:layout_above="@+id/thanhtoanLayout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp" />

    <!-- Phần thanh toán -->
    <LinearLayout
        android:id="@+id/thanhtoanLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomToolbar"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#F6F6F6"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="Tổng:"
            android:textColor="#FF4F4F"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tongtien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000000"
            android:textColor="#FF4F4F"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="đ"
            android:textColor="#FF4F4F"
            android:textSize="20sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnthanhtoan"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#FF0505"
            android:text="Thanh Toán"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Toolbar ở cuối màn hình -->
    <include
        android:id="@+id/bottomToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/bottom_toolbar_user" />

    <!-- Dữ liệu ẩn -->
    <TextView
        android:id="@+id/masp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="1sp" />

    <TextView
        android:id="@+id/manhomsanpham"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="1sp" />

    <TextView
        android:id="@+id/tendn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="1sp" />
</RelativeLayout>
