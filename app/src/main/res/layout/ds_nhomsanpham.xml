<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gridview1"
    android:layout_marginBottom="1dp">

    <ImageView
        android:id="@+id/product_group_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"


        android:src="@mipmap/ic_launcher" /> <!-- Thay your_image bằng ảnh của bạn -->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/product_group_img"> <!-- Đặt TableLayout bên phải ImageView -->

        <TableRow>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:text="Mã :"
                android:textColor="#0021F6"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/product_group_id"
                android:text="mã"
                android:textColor="#0021F6"
                android:textSize="15sp"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <!-- Các TableRow khác giữ nguyên -->
        <TableRow>
            <TextView
                android:text="Tên nhóm:"
                android:textColor="#0021F6"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/product_group_name"
                android:text="Tên Nhóm"
                android:textColor="#0021F6"
                android:textSize="15sp"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>


    </TableLayout>

    <ImageButton
        android:id="@+id/edit_product_group_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="270dp" />

    <ImageButton
        android:id="@+id/delete_product_group_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/xoa1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="300dp" />
</RelativeLayout>