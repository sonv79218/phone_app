<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginBottom="1dp">

    <LinearLayout
        android:id="@+id/bo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:backgroundTint="#072349"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:background="#F6F3EF"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"

            android:layout_height="60dp">
                  <TextView

                android:layout_marginLeft="0dp"
                android:layout_weight="9"
                android:fontFamily="sans-serif-condensed-light"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:paddingTop="0dp"


                android:text="TÀI KHOẢN KHÁCH HÀNG"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_width="80dp"
                android:layout_height="65dp" />  </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        app:cardCornerRadius="0dp"
        android:layout_below="@+id/bo"
        app:cardElevation="20dp"
        android:background="@drawable/edittext">

        <LinearLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên đăng nhập:"
                    android:layout_marginLeft="90dp"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#00B6FF"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tendn "
                    android:id="@+id/tendn"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#00B6FF"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/qd"
                android:background="#DADADA"
                android:textSize="18dp"
                android:text="Quy định sử dụng"
                android:drawablePadding="8dp"
                android:hint="Họ và Tên"
                android:textColorHint="#aaa"
                android:padding="8dp"
                android:layout_marginBottom="1dp"
                android:drawableRight="@drawable/muitenphai"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="1dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/cs"
                android:background="#DADADA"
                android:textSize="18dp"
                android:text="Chính sách và bảo mật"
                android:drawablePadding="8dp"
                android:hint="Họ và Tên"

                android:padding="8dp"
                android:layout_marginBottom="1dp"
                android:drawableRight="@drawable/muitenphai"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="1dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/dk"
                android:background="#DADADA"
                android:textSize="18dp"
                android:text="Điều khoản và dịch vụ"
                android:drawablePadding="8dp"
                android:hint="Họ và Tên"

                android:padding="8dp"
                android:layout_marginBottom="1dp"
                android:drawableRight="@drawable/muitenphai"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="1dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/td"
                android:background="#DADADA"
                android:textSize="18dp"
                android:text="Tổng đài CSKH 19002325"
                android:drawablePadding="8dp"


                android:padding="8dp"
                android:layout_marginBottom="202dp"
                android:drawableRight="@drawable/muitenphai"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="1dp"/>

            <Button
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/btndangxuat"
                android:text="Đăng xuất"
                android:textSize="18sp"
                android:layout_marginTop="2dp"
                android:backgroundTint="#FFDC00"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <!-- Toolbar ở cuối màn hình -->
    <include
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/bottom_toolbar_user" />


</RelativeLayout>