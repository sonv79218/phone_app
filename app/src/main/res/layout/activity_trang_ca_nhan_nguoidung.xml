<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginBottom="1dp">

    <LinearLayout
        android:id="@+id/bo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:backgroundTint="#072349"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:background="#F6F3EF"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"

            android:layout_height="60dp">
                  <TextView

                android:layout_marginLeft="0dp"
                android:layout_weight="9"
                android:fontFamily="sans-serif-condensed-light"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:paddingTop="0dp"


                android:text="TÀI KHOẢN KHÁCH HÀNG"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_width="80dp"
                android:layout_height="65dp" />  </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        app:cardCornerRadius="0dp"
        android:layout_below="@+id/bo"
        app:cardElevation="20dp"
        android:background="@drawable/edittext">

        <LinearLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên đăng nhập:"
                    android:layout_marginLeft="90dp"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#00B6FF"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tendn "
                    android:id="@+id/tendn"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#00B6FF"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:text="Họ tên:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#072349"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvHoTen"
                    android:text="Nguyễn Văn A"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textStyle="bold"
                    android:textColor="#072349"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvEmail"
                    android:text="example@gmail.com"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại:"
                    android:textStyle="bold"
                    android:textColor="#072349"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSdt"
                    android:text="0123456789"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ:"
                    android:textStyle="bold"
                    android:textColor="#072349"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDiaChi"
                    android:text="123 Lê Lợi, Hà Nội"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngày tạo:"
                    android:textStyle="bold"
                    android:textColor="#072349"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvNgayTao"
                    android:text="2025-06-01"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quyền tài khoản:"
                    android:textStyle="bold"
                    android:textColor="#072349"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvQuyen"
                    android:text="Người dùng"
                    android:textSize="16sp" />

                <!-- Nút chỉnh sửa và đổi mật khẩu -->
                <Button
                    android:id="@+id/btnChinhSua"
                    android:text="Chỉnh sửa thông tin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF"/>

                <Button
                    android:id="@+id/btnDoiMatKhau"
                    android:text="Đổi mật khẩu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#03A9F4"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>



            <Button
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/btndangxuat"
                android:text="Đăng xuất"
                android:textSize="18sp"
                android:layout_marginTop="2dp"
                android:backgroundTint="#FFDC00"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <!-- Toolbar ở cuối màn hình -->
    <include
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/bottom_toolbar_user" />


</RelativeLayout>