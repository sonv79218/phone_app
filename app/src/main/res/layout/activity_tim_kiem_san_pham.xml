<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#faeabf"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/bo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:background="#072349"
        android:layout_alignParentTop="true"

        android:padding="1dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView

                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:id="@+id/logo"
                android:src="@drawable/logo1"
                android:layout_width="50dp"
                android:layout_height="60dp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_weight="9"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-condensed-light"
                android:paddingTop="20dp"
                android:text="xin chao quy khách"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/tendn"

                />


        </LinearLayout>

        <EditText
            android:focusableInTouchMode="false"
            android:id="@+id/timkiem"
            android:paddingRight="10dp"
            android:textColorHint="#aaa"
            android:hint="Search..."
            android:paddingLeft="15dp"
            android:textColor="#000000"
            android:drawableRight="@drawable/tk"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/thanhtimkiem"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:scrollHorizontally="true"
            android:maxLines="1"
            android:inputType="text"
            android:ellipsize="end"
            android:layout_marginBottom="10dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Nội dung ứng dụng -->
    <ScrollView
        android:id="@+id/contentScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"


            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-condensed"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Sản phẩm bạn tìm kiếm"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:textStyle="bold" />

            <GridView
                android:id="@+id/grv"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="900dp"
                android:layout_marginRight="10dp"
                android:horizontalSpacing="5dp"
                android:numColumns="2"
                android:columnCount="10"

                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp" />




            <!-- Nội dung chính của ứng dụng -->

        </LinearLayout>
    </ScrollView>

    <!-- Toolbar ở cuối màn hình -->
    <include
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/bottom_toolbar_user" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
       android:id="@+id/tendn" />

</RelativeLayout>