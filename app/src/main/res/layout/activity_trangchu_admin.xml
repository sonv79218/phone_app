<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#faeabf"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/bo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:background="#072349"
        android:layout_alignParentTop="true"

        android:padding="1dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:id="@+id/logo"
                android:src="@drawable/logo1"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside" />

            <TextView
                android:focusableInTouchMode="false"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="9"
android:textAllCaps="true"
                android:fontFamily="sans-serif-condensed-light"
                android:gravity="center"
                android:text="phone store ADMIN"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <EditText
            android:id="@+id/timkiem"
            android:paddingRight="10dp"
            android:textColorHint="#aaa"
            android:hint="Search..."
            android:paddingLeft="15dp"
            android:textColor="#000000"
            android:drawableRight="@drawable/tk"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/thanhtimkiem"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:scrollHorizontally="true"
            android:maxLines="1"
            android:inputType="text"
            android:ellipsize="end"
            android:layout_marginBottom="10dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Nội dung ứng dụng -->
    <ScrollView
        android:id="@+id/contentScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/bannerPager"
                    android:layout_width="match_parent"
                    android:layout_height="180dp" />

                <!-- Chấm tròn chỉ trang -->
<!--                <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator-->
<!--                    android:id="@+id/bannerDots"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="bottom|center_horizontal"-->
<!--                    android:layout_marginBottom="8dp"/>-->
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-condensed"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Danh Mục"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:textStyle="bold" />

            <GridView
                android:id="@+id/grv2"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginRight="10dp"
                android:horizontalSpacing="5dp"
                android:numColumns="4"
                android:columnCount="2"

                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp" />




            <!-- Nội dung chính của ứng dụng -->
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:paddingBottom="10dp"
                android:text="Đề xuất sản phẩm"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:textStyle="bold" />

            <!-- GridView với 5cột -->
            <GridView
                android:id="@+id/grv1"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="730dp"
                android:layout_marginRight="10dp"
                android:horizontalSpacing="5dp"
                android:numColumns="2"
                android:columnCount="4"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp" />

            <!-- Thêm CardView cho các dịch vụ -->

        </LinearLayout>
    </ScrollView>

</RelativeLayout>