<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FF5722"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ql"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/tieude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiết sản phẩm"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginStart="-24dp" />
    </LinearLayout>

    <!-- Nội dung -->
    <ScrollView
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Ảnh sản phẩm -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imgsp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher_round" />
            </androidx.cardview.widget.CardView>

            <!-- Tên sản phẩm -->
            <TextView
                android:id="@+id/tensp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm nổi bật"
                android:textColor="#212121"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <!-- Giá -->
            <TextView
                android:id="@+id/dongia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="299.000 đ"
                android:textColor="#E91E63"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Số lượng -->
            <TextView
                android:id="@+id/soluongkho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Còn lại: 15 sản phẩm"
                android:textColor="#757575"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp" />

            <!-- Mô tả -->
            <TextView
                android:text="Mô tả sản phẩm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/mota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mô tả chi tiết sản phẩm ở đây: chất liệu, kích thước, xuất xứ..."
                android:textColor="#424242"
                android:textSize="15sp"
                android:layout_marginBottom="16dp" />

            <!-- Ghi chú -->
            <TextView
                android:text="Ghi chú"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/ghichu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sản phẩm chính hãng, bảo hành 12 tháng"
                android:textColor="#424242"
                android:textSize="15sp"
                android:layout_marginBottom="20dp" />

            <!-- Đánh giá trung bình -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:text="Đánh giá trung bình:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <LinearLayout
                    android:id="@+id/layout_star_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="8dp">

                    <ImageView
                        android:id="@+id/star1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star_empty" />

                    <ImageView
                        android:id="@+id/star2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star_empty" />

                    <ImageView
                        android:id="@+id/star3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star_empty" />

                    <ImageView
                        android:id="@+id/star4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star_empty" />

                    <ImageView
                        android:id="@+id/star5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star_empty" />
                </LinearLayout>
            </LinearLayout>

            <!-- Tiêu đề danh sách đánh giá -->
            <TextView
                android:id="@+id/tv_danhgia_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đánh giá của khách hàng"
                android:textColor="#072349"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="#ECECEC"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- Danh sách đánh giá -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_danhgia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="24dp" />

            <!-- Hai nút hành động -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnaddcart"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Thêm vào giỏ hàng"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:backgroundTint="#FF9800"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btndathang"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Mua ngay"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:backgroundTint="#E91E63" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
