<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FF5722"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ql"
            android:tint="#FFFFFF" />

        <TextView
            android:id="@+id/tieude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiết sản phẩm"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="-24dp"/>
    </LinearLayout>

    <!-- Nội dung -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerBar"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Ảnh sản phẩm -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imgsp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher_round" />
            </androidx.cardview.widget.CardView>

            <!-- Tên sản phẩm -->
            <TextView
                android:id="@+id/tensp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên Sản Phẩm Nổi Bật"
                android:textSize="22sp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <!-- Giá -->
            <TextView
                android:id="@+id/dongia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="299.000 đ"
                android:textColor="#E91E63"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- Số lượng -->
            <TextView
                android:id="@+id/soluongkho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Còn lại: 15 sản phẩm"
                android:textColor="#757575"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginBottom="16dp" />

            <!-- Mô tả -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mô tả sản phẩm"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/mota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chi tiết sản phẩm sẽ được hiển thị ở đây. Bao gồm chất liệu, kích thước, công dụng..."
                android:textColor="#424242"
                android:textSize="15sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="12dp"/>

            <!-- Ghi chú -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ghi chú thêm"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/ghichu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hàng chính hãng, bảo hành 12 tháng."
                android:textColor="#424242"
                android:textSize="15sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp"/>

            <!-- Ẩn các ID -->
            <TextView
                android:id="@+id/masp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textSize="1sp"/>

            <TextView
                android:id="@+id/manhomsanpham"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textSize="1sp"/>

            <TextView
                android:id="@+id/tendn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textSize="1sp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Thanh hành động dưới -->
    <LinearLayout
        android:id="@+id/bottomToolbar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:elevation="8dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Thêm vào giỏ hàng"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnBuyNow"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Mua ngay"
            android:backgroundTint="#E91E63"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>
