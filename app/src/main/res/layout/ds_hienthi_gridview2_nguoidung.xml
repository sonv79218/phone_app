<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="1dp"
    android:background="@drawable/gridview1"
    android:gravity="center"> <!-- Căn giữa toàn bộ nội dung -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:background="@drawable/bg_item_border">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"

            android:layout_marginTop="3dp"
            app:cardCornerRadius="7dp"
            app:cardElevation="0dp"> <!-- Căn giữa CardView -->
            <ImageView
                android:id="@+id/product_group_img"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher" /> <!-- Thay your_image bằng ảnh của bạn -->

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"

            android:orientation="vertical"> <!-- Căn giữa LinearLayout -->

            <TextView
                android:id="@+id/product_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:text="Tên nhóm sp"
                android:textColor="#000000"
                android:textSize="7sp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/product_group_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="1sp" />

</RelativeLayout>